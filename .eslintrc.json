{
    "env": {
        "browser": true,
        "es2021": true
    },
    "extends": [
        "eslint:recommended"
    ],
		"globals": {
			"require": true,
			"module": true
		},
    "parserOptions": {
        "ecmaVersion": "latest",
        "sourceType": "module"
    },
    "plugins": [
      "import-quotes"
    ],
    "rules": {
        "indent": [
            "warn",
            "tab",
            { "SwitchCase": 1 }
        ],
        "linebreak-style": [
            "error",
            "unix"
        ],
        "import-quotes/import-quotes": [
          "warn",
          "single"
        ],
        "quotes": "off",
        "no-lonely-if": "warn",
        "no-tabs": [
            "error",
						{ "allowIndentationTabs": true }
        ],
        "prefer-const": "error",
        "semi": [
            "warn",
            "always"
        ]
    }
}
